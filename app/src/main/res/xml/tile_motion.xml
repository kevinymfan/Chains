<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <Transition
      android:id="@+id/activate"
      app:constraintSetStart="@id/start"
      app:constraintSetEnd="@id/end"
      app:duration="1000"/>

  <ConstraintSet android:id="@+id/start">
    <Constraint
        android:id="@id/suggestions_section"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Constraint android:id="@id/for_you">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/more_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_1">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_2">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_3">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_4">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_5">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_6">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint
        android:id="@id/player_section"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Constraint android:id="@id/player_icon">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/player_title">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/player_subtitle">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/seek_bar">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/left_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/play_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/right_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/bottom_left_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/bottom_right_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">
    <Constraint
        android:id="@id/suggestions_section"
        android:layout_width="44dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/player_section"
        app:layout_constraintTop_toTopOf="parent"/>
    <Constraint android:id="@id/for_you">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/more_button">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_1">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_2">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_3">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_4">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_5">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint android:id="@id/media_suggestion_6">
      <PropertySet android:alpha="0.0"/>
    </Constraint>
    <Constraint
        android:id="@id/player_section"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/suggestions_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Constraint android:id="@id/player_icon">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/player_title">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/player_subtitle">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/seek_bar">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/left_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/play_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/right_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/bottom_left_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
    <Constraint android:id="@id/bottom_right_button">
      <PropertySet android:alpha="1.0"/>
    </Constraint>
  </ConstraintSet>
</MotionScene>